<form class="chronicle-keeper-settings">
  <div class="form-group">
    <label>{{localize "CHRONICLE_KEEPER.Settings.OllamaUrl.Name"}}</label>
    <input type="text" name="ollamaUrl" value="{{ollamaUrl}}">
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.OllamaUrl.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>{{localize "CHRONICLE_KEEPER.Settings.Model.Name"}}</label>
    <select name="model">
      {{#each models}}
        <option value="{{this.name}}" {{#if this.selected}}selected{{/if}}>
          {{this.name}} ({{this.size}})
        </option>
      {{/each}}
    </select>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.Model.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>{{localize "CHRONICLE_KEEPER.Settings.Temperature.Name"}}</label>
    <input type="range" name="temperature" min="0" max="1" step="0.1" value="{{temperature}}">
    <span class="range-value">{{temperature}}</span>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.Temperature.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>{{localize "CHRONICLE_KEEPER.Settings.MaxTokens.Name"}}</label>
    <input type="number" name="maxTokens" min="256" max="4096" step="256" value="{{maxTokens}}">
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.MaxTokens.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>{{localize "CHRONICLE_KEEPER.Settings.SystemPrompt.Name"}}</label>
    <textarea name="systemPrompt" rows="10">{{systemPrompt}}</textarea>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.SystemPrompt.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>
      <input type="checkbox" name="dmEnabled" {{#if dmEnabled}}checked{{/if}}>
      {{localize "CHRONICLE_KEEPER.Settings.DMEnabled.Name"}}
    </label>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.DMEnabled.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>
      <input type="checkbox" name="enableAutoNarration" {{#if enableAutoNarration}}checked{{/if}}>
      {{localize "CHRONICLE_KEEPER.Settings.EnableAutoNarration.Name"}}
    </label>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.EnableAutoNarration.Hint"}}</p>
  </div>
  
  <div class="form-group">
    <label>
      <input type="checkbox" name="enableCombatNarration" {{#if enableCombatNarration}}checked{{/if}}>
      {{localize "CHRONICLE_KEEPER.Settings.EnableCombatNarration.Name"}}
    </label>
    <p class="hint">{{localize "CHRONICLE_KEEPER.Settings.EnableCombatNarration.Hint"}}</p>
  </div>
</form>
